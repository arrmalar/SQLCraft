@model ManageQueryRiddle

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Recipe</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="@Model.Id" hidden/>

            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div class="row mb-3">
                            <label asp-for="@Model.QueryRiddle.DBSchemaId" class="col-sm-2 col-form-label"></label>
                            <select asp-for="@Model.QueryRiddle.DBSchemaId" asp-items="@Model.DBSchemas">
                                <option>Please select DBSchema</option>
                            </select>
                            <span asp-validation-for="@Model.QueryRiddle.DBSchemaId" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="@Model.Level" class="col-sm-2 col-form-label"></label>
                            <select asp-for="EmployeeId" asp-items="@Model.Employees">
                                <option>Please select DBSchema</option>
                            </select>
                            <span asp-validation-for="@Model.Question" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="@Model.Question" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Question" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.Question" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="@Model.CorrectAnswer" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.CorrectAnswer" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.CorrectAnswer" class="text-danger"></span>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">
                                    Create
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-area="Admin" asp-controller="Query" asp-action="Index" class="btn btn-secondary form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}