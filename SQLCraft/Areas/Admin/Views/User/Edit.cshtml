@model ApplicationUser

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Recipe</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="@Model.Id" hidden/>
            <input asp-for="@Model.SecurityStamp" hidden />
            <input asp-for="@Model.LockoutEnd" hidden />
            <input asp-for="@Model.ConcurrencyStamp" hidden />

            <input asp-for="@Model.PasswordHash" hidden />
            <input asp-for="@Model.NormalizedUserName" hidden />
            <input asp-for="@Model.NormalizedEmail" hidden /> 

            <div class="row">
                <div class="col-12">
                    <div class="border p-3">

                        <div class="row mb-3">
                            <label asp-for="@Model.UserName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.UserName" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="@Model.Email" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Email" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="@Model.EmailConfirmed" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <div class="form-check form-switch">
                                    <input type="checkbox" asp-for="@Model.EmailConfirmed" class="form-check-input">
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="@Model.PhoneNumber" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.PhoneNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="@Model.PhoneNumberConfirmed" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <div class="form-check form-switch">
                                    <input type="checkbox" asp-for="@Model.PhoneNumberConfirmed" class="form-check-input">
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="@Model.TwoFactorEnabled" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <div class="form-check form-switch">
                                    <input type="checkbox" asp-for="@Model.TwoFactorEnabled" class="form-check-input">
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="@Model.LockoutEnabled" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <div class="form-check form-switch">
                                    <input type="checkbox" asp-for="@Model.LockoutEnabled" class="form-check-input" id="lockoutEnabledSwitch">
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="@Model.AccessFailedCount" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.AccessFailedCount" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.AccessFailedCount" class="text-danger"></span>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">
                                    Edit
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-secondary form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}