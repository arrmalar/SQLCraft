@model QueryAnswer

<div class="container mt-5">
    <div class="card shadow-lg border-0 mt-4">
        <div class="card-body p-4">
            <form asp-action="Index" method="post" class="row g-3" novalidate>
                <input asp-for="QueryRiddle.Id" type="hidden" />
                <input asp-for="QueryRiddle.Question" type="hidden" />
                <input asp-for="QueryRiddle.CorrectAnswer" type="hidden" />

                <div class="row mb-3">
                    <div class="col-sm-12">
                        @Model.QueryRiddle.Question
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-12">
                        <textarea asp-for="@Model.UserAnswer" class="form-control"></textarea>
                    </div>
                </div>

                <div class="col-12">
                    <div class="row mt-3 justify-content-center">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle-fill me-3"></i>Check
                            </button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

