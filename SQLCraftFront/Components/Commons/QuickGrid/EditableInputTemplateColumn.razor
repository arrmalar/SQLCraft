<div>
    @if (InEditMode)
    {
        <span>
            <input type="text" @bind-value="Value" @bind-value:event="onchange"/>
        </span>
    }
    else
    {
        <span>
            @Value
        </span>
    }
</div>

@code {
    [Parameter]
    public bool InEditMode { get; set; }

    [Parameter]
    public string? Value{ get; set; }

    public string? GetValue()
    {
        return Value;    
    }
}